@{Layout = "~/Areas/Admin/Views/Shared/_NavLayout.cshtml";}

<script src="~/Scripts/vendors.js"></script>

<div class="col-md-6" style="margin-left: -15px;">
    @{
        using (var context = new MMContext())
        {
            var vendors = context.Vendors.ToList();

            <a class="btn btn-sm btn-primary" onclick="AddVendor()" style="margin-bottom: 5px;"><i class="fa fa-plus-circle"></i> დამატება</a>

            <table class="table table-striped table-hover table-bordered">
                <thead>
                    <tr>
                        <th>id</th>
                        <th>დასახელება</th>
                        <th>კოდი</th>
                        <th style="width: 24px;"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var vendor in vendors)
                    {
                        <tr style="cursor: pointer;">
                            <td onclick="EditVendor(@vendor.Id, '@vendor.Name', '@vendor.Code')">@vendor.Id</td>
                            <td onclick="EditVendor(@vendor.Id, '@vendor.Name', '@vendor.Code')">@vendor.Name</td>
                            <td onclick="EditVendor(@vendor.Id, '@vendor.Name', '@vendor.Code')">@vendor.Code</td>
                            <td><a class="btn btn-sm btn-danger btn-xs" onclick="DeleteVendor(@vendor.Id)"><i class="fa fa-trash"></i></a></td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    }
</div>

<div id="addEditVendor" class="col-md-3" style="display: none;">
    <h4 id="addEditVendorTitle"></h4>
    <hr />
    <input id="vendorName" class="input-group input-sm form-control" style="max-width: 100% !important;" placeholder="დასახელება" autofocus />
    <input id="vendorCode" class="input-group input-sm form-control" style="max-width: 100% !important; margin-top: 10px;" placeholder="კოდი" />
    <hr style="margin-bottom: 10px;" />
    <a class="btn btn-sm btn-default" style="float: right;" onclick="CancelSaveVendor()"><i class="fa fa-close"></i> გაუქმება</a>
    <a class="btn btn-sm btn-primary" style="float: right; margin-right: 5px;" onclick="SaveVendor()"><i class="fa fa-save"></i> შენახვა</a>
</div>
