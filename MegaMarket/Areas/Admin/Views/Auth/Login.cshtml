@model User

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Back Office Login</title>
    <style type="text/css">
        body {
            margin: 0;
            padding: 0;
            overflow: auto;
            font-size: 12px;
            font-family: "Lucida Grande", sans-serif;
            /*background-color: #f3f3f3 !important;*/
        }

        * {
            line-height: 1.2em;
            margin: 0;
            padding: 0;
            outline: 0;
        }        
    </style>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="media" style="margin-top: 10px;">
            <a href="/Admin/Auth/Login"><img src="~/Content/Resources/fina_logo_blue.png" alt="logo" style="margin:0 auto; float: left;" height="40" /></a>
        </div>

        <hr style="margin-top: 10px;" />

        <div class="row">           
            <div class="col-md-4 col-md-offset-4">               
                <div class="panel panel-default" style="margin-top: 20px;">
                    <div class="panel-heading">
                        <h3 class="panel-title">სისტემაში შესვლა</h3>
                    </div>
                    <div class="panel-body">
                        @using (Html.BeginForm("Login", "Auth", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <section>
                                @if (ViewBag.Error != null)
                                {
                                    <div class="alert alert-danger">
                                        @ViewBag.Error
                                    </div>
                                }
                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.UserName, new { id = "id_username", placeholder = "შესვლის სახელი", @class = "form-control input-sm", autofocus = "autofocus" })
                                </div>
                                <div class="form-group">
                                    @Html.PasswordFor(m => m.Password, new { id = "id_password", placeholder = "პაროლი", @class = "form-control input-sm" })
                                </div>
                                <button type="submit" name="autenf" class="btn btn-primary btn-sm" style="float: right;"><i class="fa fa-sign-in"></i> შესვლა</button>
                            </section>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container" style="position: fixed; bottom: 10px; left: 0; right: 0;">
        <hr style="margin-bottom: 10px; margin-top: 0;" />

        <span style="float: right; font-size: 12px;">&copy;@DateTime.Now.Year FINA Ltd</span>
    </div>
</body>
</html>